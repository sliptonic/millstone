<?xml version='1.0' encoding='UTF-8'?>
<pyvcp>
         <vbox>
         <relief>RIDGE</relief>         
         <bd>6</bd>
                <label>
                        <text>"Spindle Speed:"</text>
                        <font>("Helvetica",10)</font>
                </label>
     		<meter>
      			<halpin>"spindle-speed"</halpin>
      			<text>"RPM"</text>
      			<subtext>""</subtext>
      			<size>150</size>
      			<min_>0</min_>
      			<max_>6000</max_>
      			<majorscale>1500</majorscale>
      			<minorscale>500</minorscale>
      			<region1>0,10,"yellow"</region1>
    		</meter>
                <hbox>
                <label>
                        <text>"At-Speed:  "</text>
                        <font>("Helvetica",10)</font>
                </label>
                    <led>
                        <halpin>"spindle-at-speed-led"</halpin> 
                        <size>15</size> 
                        <on_color>"green"</on_color>
                        <off_color>"red"</off_color>
                    </led>
                </hbox>
        </vbox>
<button>
    <halpin>"retract-btn"</halpin>
    <text>"Retract Spindle"</text> 
</button>
</pyvcp>
